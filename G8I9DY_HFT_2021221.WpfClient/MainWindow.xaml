<Window x:Class="G8I9DY_HFT_2021221.WpfClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:G8I9DY_HFT_2021221.WpfClient"
        mc:Ignorable="d"
        Background="LightGreen"
        Title="Budget Spotify" Height="300" Width="400">
    <Window.Resources>
        <BitmapImage x:Key="image" UriSource="logo.png"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Image Source="{StaticResource image}"/>
        <Image Source="logo.png" VerticalAlignment="Center"></Image>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Stretch" Grid.Row="1">
            <Button Content="Artists" Margin="10" Padding="10" Click="Button_Click"></Button>
            <Button Content="Albums" Margin="10" Padding="10" Click="Button_Click_1"></Button>
            <Button Content="Tracks" Margin="10" Padding="10" Click="Button_Click_2"></Button>
        </StackPanel>
    </Grid>
</Window>
